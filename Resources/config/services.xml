<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="roukmoute.doctrine_prefix.table_prefix_listener"
                 class="Roukmoute\DoctrinePrefixBundle\EventListener\TablePrefixListener">
            <argument>%roukmoute_doctrineprefixbundle.prefix%</argument>
            <argument>%roukmoute_doctrineprefixbundle.bundles%</argument>
            <argument>%roukmoute_doctrineprefixbundle.encoding%</argument>
            <tag name="doctrine.event_listener" event="loadClassMetadata"/>
        </service>
    </services>
</container>
